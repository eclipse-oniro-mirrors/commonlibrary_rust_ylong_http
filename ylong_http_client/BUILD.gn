import("//build/ohos.gni")
import("//build/test.gni")

ohos_rust_shared_library("ylong_http_client_inner") {
  part_name = "ylong_http"
  subsystem_name = "commonlibrary"

  crate_name = "ylong_http_client_inner"
  edition = "2021"

  features = [
    "async",
    "c_openssl_3_0",
    "http1_1",
    "ylong_base",
    "__c_openssl",
    "__tls",
  ]

  sources = [ "src/lib.rs" ]
  deps = [
    "../ylong_http:ylong_http",
    "//third_party/rust/crates/libc:lib",
  ]
  external_deps = [
    "openssl:libcrypto_shared",
    "openssl:libssl_shared",
    "ylong_runtime:ylong_runtime",
  ]
}

ohos_rust_unittest("rust_ylong_http_client_test_ut") {
  module_out_path = "ylong_http/ylong_http_client"

  rustflags = [
    "--cfg=feature=\"async\"",
    "--cfg=feature=\"http1_1\"",
    "--cfg=feature=\"c_openssl_3_0\"",
    "--cfg=feature=\"__tls\"",
    "--cfg=feature=\"__c_openssl\"",
    "--cfg=feature=\"ylong_base\"",
  ]

  sources = [ "src/lib.rs" ]
  deps = [
    "../ylong_http:ylong_http",
    "//third_party/rust/crates/libc:lib",
  ]
  external_deps = [
    "openssl:libcrypto_shared",
    "openssl:libssl_shared",
    "ylong_runtime:ylong_runtime",
  ]
}

group("unittest") {
  testonly = true
  deps = [
    ":rust_ylong_http_client_test_ut",
    "../ylong_http:rust_ylong_http_test_ut",
  ]
}
